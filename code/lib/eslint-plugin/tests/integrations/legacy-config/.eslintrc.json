{
  "root": true,
  "extends": ["plugin:storybook/recommended"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2019
  },
  "overrides": [
    {
      "files": ["*.stories.@(ts|tsx|js|jsx|mjs|cjs)"],
      "rules": {
        "storybook/story-exports": "warn",
        "storybook/meta-inline-properties": "warn"
      }
    }
  ]
}
